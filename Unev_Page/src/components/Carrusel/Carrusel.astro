      </h2>
      <p class="carousel-label">NOTICIA</p>
    </div>
  </div>
  <!-- Flechas -->
  <button class="carousel-prev" aria-label="Anterior">&#10094;</button>
  <button class="carousel-next" aria-label="Siguiente">&#10095;</button>
</section>

<script>
  // Script mínimo para el carrusel (puedes moverlo a un archivo separado si lo deseas)
  let current = 0;
  const slides = document.querySelectorAll('.carousel-slide');
  const total = slides.length;
  const next = () => {
    slides[current].classList.remove('active');
    current = (current + 1) % total;
    slides[current].classList.add('active');
  };
  const prev = () => {
    slides[current].classList.remove('active');
    current = (current - 1 + total) % total;
    slides[current].classList.add('active');
  };
  document.querySelector('.carousel-next').onclick = next;
  document.querySelector('.carousel-prev').onclick = prev;
</script>
