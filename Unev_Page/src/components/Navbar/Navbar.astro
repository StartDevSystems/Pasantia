<style>
  /* Navbar Styles */
  #navbar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
    transition: all 0.3s ease;
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  #navbar.scrolled {
    background-color: rgba(255, 255, 255, 0.98);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .navbar-flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    font-size: 24px;
    font-weight: bold;
    color: #334155;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .logo:hover {
    color: #2563eb;
    transform: scale(1.05);
  }

  .logo-icon {
    font-size: 32px;
    margin-right: 12px;
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 53%, 80%, 100% {
      transform: translate3d(0,0,0);
    }
    40%, 43% {
      transform: translate3d(0,-30px,0);
    }
    70% {
      transform: translate3d(0,-15px,0);
    }
    90% {
      transform: translate3d(0,-4px,0);
    }
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: flex;
    align-items: center;
    list-style: none;
    gap: 4px;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: block;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    color: #475569;
  }

  .nav-link:hover {
    color: #2563eb;
    background-color: rgba(239, 246, 255, 1);
    transform: translateY(-2px);
  }

  .nav-link.active {
    color: #2563eb;
    background-color: rgba(239, 246, 255, 1);
    font-weight: 600;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.2), transparent);
    transform: translateX(-100%);
    transition: transform 0.5s ease;
  }

  .nav-link:hover::before {
    transform: translateX(100%);
  }

  /* Dropdown Menu */
  .dropdown-container {
    position: relative;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 8px;
    width: 208px;
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 12px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
  }

  .dropdown-container:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-link {
    display: block;
    padding: 12px 20px;
    color: #475569;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 8px;
    margin: 4px 8px;
  }

  .dropdown-link:hover {
    color: white;
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    transform: translateX(4px);
  }

  /* Search Box */
  .search-container {
    display: flex;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 50px;
    padding: 8px 16px;
    border: 1px solid rgba(59, 130, 246, 0.5);
    transition: all 0.3s ease;
  }

  .search-container:focus-within {
    background-color: white;
    border-color: #3b82f6;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .search-input {
    background: transparent;
    outline: none;
    padding: 4px 12px;
    color: #475569;
    border: none;
    width: 160px;
    transition: width 0.3s ease;
  }

  .search-input:focus {
    width: 208px;
  }

  .search-input::placeholder {
    color: #64748b;
  }

  .search-btn {
    color: #3b82f6;
    background: none;
    border: none;
    padding: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 4px;
  }

  .search-btn:hover {
    color: #2563eb;
    transform: scale(1.1);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    color: #475569;
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 4px;
  }

  .mobile-menu-btn:hover {
    color: #2563eb;
    transform: rotate(90deg);
  }

  .menu-icon {
    display: block;
  }

  .close-icon {
    display: none;
  }

  /* Mobile Menu */
  .mobile-menu {
    transition: all 0.3s ease;
    overflow: hidden;
    max-height: 0;
    opacity: 0;
  }

  .mobile-menu.active {
    max-height: 100vh;
    opacity: 1;
  }

  .mobile-menu-content {
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-top: 1px solid rgba(255, 255, 255, 0.3);
    padding: 16px 24px;
  }

  .mobile-search {
    margin-bottom: 16px;
  }

  .mobile-search-container {
    display: flex;
    align-items: center;
    background-color: #f1f5f9;
    border-radius: 50px;
    padding: 8px 16px;
  }

  .mobile-search-input {
    background: transparent;
    outline: none;
    flex: 1;
    color: #475569;
    border: none;
  }

  .mobile-search-btn {
    color: #3b82f6;
    background: none;
    border: none;
    padding: 4px;
    cursor: pointer;
  }

  .mobile-nav {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav > li {
    margin-bottom: 8px;
  }

  .mobile-nav-link {
    display: block;
    padding: 12px 16px;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
    color: #475569;
  }

  .mobile-nav-link:hover {
    color: #2563eb;
    background-color: rgba(239, 246, 255, 1);
  }

  .mobile-nav-link.active {
    color: #2563eb;
    background-color: rgba(239, 246, 255, 1);
    font-weight: 600;
  }

  .mobile-submenu {
    list-style: none;
    margin: 8px 0 0 16px;
    padding: 0;
  }

  .mobile-submenu li {
    margin-bottom: 4px;
  }

  .mobile-submenu-link {
    display: block;
    padding: 8px 16px;
    font-size: 14px;
    color: #64748b;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .mobile-submenu-link:hover {
    color: #2563eb;
    background-color: rgba(239, 246, 255, 1);
  }

  /* Responsive Design */
  @media (min-width: 768px) {
    .desktop-nav {
      display: flex;
    }

    .search-container {
      display: flex;
    }

    .mobile-menu-btn {
      display: none;
    }

    .mobile-menu {
      display: none;
    }
  }

  @media (max-width: 767px) {
    .desktop-nav {
      display: none;
    }

    .search-container {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }
  }

  @media (max-width: 480px) {
    .navbar-container {
      padding: 0 16px;
    }

    .logo {
      font-size: 20px;
    }

    .logo-icon {
      font-size: 28px;
      margin-right: 8px;
    }
  }
</style>

<script>
  // Scroll effect for navbar
  window.addEventListener('scroll', () => {
    const navbar = document.getElementById('navbar');
    if (window.scrollY > 50) {
      navbar.classList.add('scrolled');
    } else {
      navbar.classList.remove('scrolled');
    }
  });

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  let isMobileMenuOpen = false;

  mobileMenuBtn.addEventListener('click', () => {
    isMobileMenuOpen = !isMobileMenuOpen;
    
    if (isMobileMenuOpen) {
      mobileMenu.classList.add('active');
      menuIcon.style.display = 'none';
      closeIcon.style.display = 'block';
    } else {
      mobileMenu.classList.remove('active');
      menuIcon.style.display = 'block';
      closeIcon.style.display = 'none';
    }
  });

  // Search functionality
  const handleSearch = (searchInput) => {
    const searchTerm = searchInput.value.trim();
    if (searchTerm) {
      // Aqu√≠ puedes integrar con tu sistema de b√∫squeda
      console.log(`B√∫squeda: ${searchTerm}`);
      // window.location.href = `/buscar?q=${encodeURIComponent(searchTerm)}`;
      alert(`B√∫squeda: ${searchTerm}`);
      searchInput.value = '';
    }
  };

  // Desktop search
  const searchBtn = document.getElementById('search-btn');
  const searchInput = document.getElementById('search-input');
  
  searchBtn.addEventListener('click', () => handleSearch(searchInput));
  searchInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      handleSearch(searchInput);
    }
  });

  // Mobile search
  const mobileSearchBtn = document.getElementById('mobile-search-btn');
  const mobileSearchInput = document.getElementById('mobile-search-input');
  
  mobileSearchBtn.addEventListener('click', () => handleSearch(mobileSearchInput));
  mobileSearchInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      handleSearch(mobileSearchInput);
    }
  });

  // Close mobile menu when clicking on links
  const mobileLinks = document.querySelectorAll('.mobile-nav a');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      isMobileMenuOpen = false;
      mobileMenu.classList.remove('active');
      menuIcon.style.display = 'block';
      closeIcon.style.display = 'none';
    });
  });
</script>
