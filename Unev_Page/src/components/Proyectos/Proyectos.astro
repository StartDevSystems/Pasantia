---
import "./Proyectos.css"
interface Project {
  id: string;
  title: string;
  category: string;
image: string;
  alt: string;
}

const projects: Project[] = [
  {
    id: "quisqueyasat",
    title: "QUISQUEYASAT",
    category: "PROYECTO",
    image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRZNa9DC4v7jDf2qMjqW_safhY6pr7rKO901Q&s",
    alt: "Vista satelital de la Tierra desde el espacio"
  },
  {
    id: "microredes",
    title: "MICROREDES",
    category: "PROYECTO",
    image: "https://retos-operaciones-logistica.eae.es/wp-content/uploads/2020/01/proyectos-tecnologicos.jpg",
    alt: "Infraestructura de microredes eléctricas"
  },
  {
    id: "caribe-circular",
    title: "Caribe Circular",
    category: "LABS",
    image: "https://media.licdn.com/dms/image/v2/D4D12AQG0jupZBAZYfA/article-cover_image-shrink_720_1280/article-cover_image-shrink_720_1280/0/1707937924951?e=2147483647&v=beta&t=g0lcQrmxUXR1IOFlDgW0I3FOfCuQrFy__hjrh6LTYF0",
    alt: "Concepto de economía circular con iconos tecnológicos"
  }
];
---

<div class="project-gallery">
  <div class="gallery-container">
    {projects.map((project) => (
      <div class="project-card" data-project={project.id}>
      <div class="card-image">
          <img 
            src={project.image} 
            alt={project.alt}
            loading="lazy"
          />
          <div class="image-overlay"></div>
        </div>
        <div class="card-content">
          <span class="project-category">Hola {project.category}</span>
          <h3 class="project-title">{project.title}</h3>
        </div>
      </div>
    ))}
  </div>
</div>

<script>
 if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll('.project-card').forEach(card => {
        card.addEventListener('click', () => {
          const projectId = card.getAttribute('data-project');
          console.log(`Clicked on project: ${projectId}`);
        });
      });
    });
  };
</script>

