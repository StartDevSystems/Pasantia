<Layout title="Noticias y Actividades - INTEC Investigación">
  <main class="news-page">
    <!-- Navigation Header -->
    <header class="site-header">
      <div class="container">
        <div class="header-content">
          <div class="logo-section">
            <div class="logo">
              <span class="logo-intec">intec</span>
              <span class="separator">|</span>
              <span class="logo-investigacion">INVESTIGACIÓN</span>
            </div>
          </div>
          <nav class="main-nav">
            <a href="#" class="nav-link">SOBRE NOSOTROS <span class="dropdown-arrow">▼</span></a>
            <a href="#" class="nav-link">INVESTIGA INTEC <span class="dropdown-arrow">▼</span></a>
            <a href="#" class="nav-link">CULTURA CIENTÍFICA <span class="dropdown-arrow">▼</span></a>
            <a href="#" class="nav-link">PROYECTOS DESTACADOS <span class="dropdown-arrow">▼</span></a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="main-content">
      <div class="container">
        <div class="content-layout">
          <!-- Left Column: Main News -->
          <section class="news-main">
            <div class="section-header">
              <h1>Noticias</h1>
            </div>
            
            <div class="news-grid">
              {noticiasDestacadas.map((noticia, index) => (
                <article class="news-card" data-index={index}>
                  <div class="news-image">
                    <img src={noticia.imagen} alt={noticia.titulo} loading="lazy" />
                  </div>
                  <div class="news-content">
                    <h2 class="news-title">{noticia.titulo}</h2>
                    <time class="news-date">{noticia.fecha}</time>
                    <a href={noticia.enlace} class="read-more-btn">LEER AHORA</a>
                  </div>
                </article>
              ))}
            </div>
          </section>

          <!-- Right Column: Other News -->
          <aside class="sidebar">
            <div class="sidebar-section">
              <h2>Otras noticias</h2>
              <div class="other-news-list">
                {otrasNoticias.map((noticia) => (
                  <article class="other-news-item">
                    <a href={noticia.enlace} class="other-news-link">
                      {noticia.imagen && (
                        <div class="other-news-image">
                          <img src={noticia.imagen} alt={noticia.titulo} loading="lazy" />
                        </div>
                      )}
                      <div class="other-news-content">
                        <h3 class="other-news-title">{noticia.titulo}</h3>
                        <time class="other-news-date">{noticia.fecha}</time>
                      </div>
                    </a>
                  </article>
                ))}
              </div>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* CSS Variables */
  :root {
    --intec-red: #e4002b;
    --text-dark: #333333;
    --text-medium: #666666;
    --text-light: #999999;
    --background-light: #f5f5f5;
    --background-white: #ffffff;
    --border-light: #e0e0e0;
    --shadow-light: 0 2px 8px rgba(0, 0, 0, 0.1);
    --shadow-medium: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  /* Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Arial', sans-serif;
    line-height: 1.4;
    color: var(--text-dark);
    background-color: var(--background-light);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Header */
  .site-header {
    background: var(--background-white);
    border-bottom: 1px solid var(--border-light);
    padding: 1rem 0;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    font-weight: bold;
  }

  .logo-intec {
    color: var(--intec-red);
    font-size: 1.5rem;
    margin-right: 8px;
  }

  .separator {
    color: var(--text-medium);
    margin-right: 8px;
  }

  .logo-investigacion {
    color: var(--text-dark);
    font-size: 1.2rem;
    font-weight: normal;
  }

  .main-nav {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: var(--text-medium);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--text-dark);
  }

  .dropdown-arrow {
    margin-left: 0.5rem;
    font-size: 0.7rem;
  }

  /* Main Content */
  .main-content {
    background: var(--background-light);
    padding: 2rem 0;
  }

  .content-layout {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
  }

  /* News Main Section */
  .section-header {
    background: var(--background-white);
    padding: 1.5rem 2rem;
    margin-bottom: 2rem;
    border-radius: 8px;
    box-shadow: var(--shadow-light);
  }

  .section-header h1 {
    font-size: 1.8rem;
    color: var(--text-medium);
    font-weight: normal;
  }

  .news-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .news-card {
    background: var(--background-white);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow-light);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .news-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-medium);
  }

  .news-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .news-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .news-card:hover .news-image img {
    transform: scale(1.05);
  }

  .news-content {
    padding: 1.5rem;
  }

  .news-title {
    font-size: 1rem;
    font-weight: bold;
    color: var(--text-dark);
    margin-bottom: 1rem;
    line-height: 1.3;
    text-transform: uppercase;
  }

  .news-date {
    display: block;
    font-size: 0.85rem;
    color: var(--text-light);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .read-more-btn {
    display: inline-block;
    color: var(--text-medium);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .read-more-btn:hover {
    color: var(--intec-red);
  }

  /* Sidebar */
  .sidebar {
    background: var(--background-white);
    padding: 2rem;
    border-radius: 8px;
    box-shadow: var(--shadow-light);
    height: fit-content;
  }

  .sidebar h2 {
    font-size: 1.4rem;
    color: var(--text-medium);
    margin-bottom: 2rem;
    font-weight: normal;
  }

  .other-news-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .other-news-item {
    border-bottom: 1px solid var(--border-light);
    padding-bottom: 1.5rem;
  }

  .other-news-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .other-news-link {
    display: flex;
    gap: 1rem;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.3s ease;
  }

  .other-news-link:hover {
    opacity: 0.8;
  }

  .other-news-image {
    flex-shrink: 0;
    width: 80px;
    height: 60px;
    border-radius: 4px;
    overflow: hidden;
  }

  .other-news-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .other-news-content {
    flex: 1;
  }

  .other-news-title {
    font-size: 0.9rem;
    font-weight: bold;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
    line-height: 1.3;
    text-transform: uppercase;
  }

  .other-news-date {
    font-size: 0.8rem;
    color: var(--text-light);
    font-weight: 500;
  }

  /* Single column layout for first news */
  .news-card[data-index="0"] {
    grid-column: 1 / -1;
  }

  .news-card[data-index="0"] .news-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .news-card[data-index="0"] .news-image {
    height: 250px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .content-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .news-grid {
      grid-template-columns: 1fr;
    }

    .news-card[data-index="0"] {
      grid-column: auto;
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    .header-content {
      flex-direction: column;
      gap: 1rem;
    }

    .main-nav {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .nav-link {
      font-size: 0.85rem;
    }

    .main-content {
      padding: 1rem 0;
    }

    .section-header {
      padding: 1rem 1.5rem;
    }

    .section-header h1 {
      font-size: 1.5rem;
    }

    .news-content {
      padding: 1rem;
    }

    .news-title {
      font-size: 0.9rem;
    }

    .sidebar {
      padding: 1.5rem;
    }

    .other-news-link {
      gap: 0.75rem;
    }

    .other-news-image {
      width: 60px;
      height: 45px;
    }

    .other-news-title {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .main-nav {
      display: none;
    }

    .news-image {
      height: 150px;
    }

    .other-news-list {
      gap: 1rem;
    }

    .other-news-item {
      padding-bottom: 1rem;
    }
  }
</style>
