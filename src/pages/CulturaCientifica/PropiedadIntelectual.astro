<style>
  /* Variables CSS */
  :root {
    --primary-color: #960201;;
    --secondary-color: #3b82f6;
    --accent-color: #fbbf24;
    --text-color: #1f2937;
    --light-gray: #f8fafc;
    --border-color: #e5e7eb;
    --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  /* Estilos generales */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Hero Section */
  .hero-section {
    background: #960201;;
    color: white;
    padding: 80px 0 60px;
  }

  .hero-content h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 30px;
    opacity: 0.9;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.9rem;
  }

  .breadcrumb a {
    color: white;
    text-decoration: none;
    opacity: 0.8;
  }

  .breadcrumb a:hover {
    opacity: 1;
  }

  /* Main Content */
  .main-content {
    padding: 60px 0;
    background: white;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 60px;
  }

  /* Sidebar */
  .sidebar {
    position: sticky;
    top: 20px;
    height: fit-content;
  }

  .side-nav {
    background: var(--light-gray);
    padding: 30px;
    border-radius: 12px;
    border: 1px solid var(--border-color);
  }

  .side-nav h3 {
    color: var(--primary-color);
    margin-bottom: 20px;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .side-nav ul {
    list-style: none;
  }

  .side-nav li {
    margin-bottom: 10px;
  }

  .side-nav a {
    color: var(--text-color);
    text-decoration: none;
    padding: 8px 0;
    display: block;
    border-left: 3px solid transparent;
    padding-left: 15px;
    transition: all 0.3s ease;
  }

  .side-nav a:hover {
    color: var(--primary-color);
    border-left-color: var(--primary-color);
  }

  /* Article Content */
  .article-content {
    max-width: 800px;
  }

  .article-content section {
    margin-bottom: 50px;
  }

  .article-content h2 {
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 20px;
    font-weight: 600;
  }

  .article-content h3 {
    color: var(--text-color);
    font-size: 1.4rem;
    margin: 30px 0 15px;
    font-weight: 600;
  }

  .article-content p {
    margin-bottom: 20px;
    font-size: 1.1rem;
    line-height: 1.7;
  }

  /* Cards Grid */
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
    margin: 30px 0;
  }

  .ip-card {
    background: white;
    padding: 30px;
    border-radius: 12px;
    border: 2px solid var(--border-color);
    text-align: center;
    transition: all 0.3s ease;
  }

  .ip-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow);
    border-color: var(--primary-color);
  }

  .card-icon {
    font-size: 3rem;
    margin-bottom: 20px;
  }

  .ip-card h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 1.3rem;
  }

  /* Highlight Box */
  .highlight-box {
    background: linear-gradient(135deg, #fef3c7, #fed7aa);
    padding: 25px;
    border-radius: 12px;
    margin: 30px 0;
    border-left: 5px solid var(--accent-color);
  }

  .highlight-box h4 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 1.2rem;
  }

  .highlight-box ul {
    list-style-position: inside;
    color: var(--text-color);
  }

  /* Requirements List */
  .requirements-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin: 25px 0;
  }

  .requirement-item {
    padding: 20px;
    background: var(--light-gray);
    border-radius: 8px;
    border-left: 4px solid var(--primary-color);
  }

  /* Benefits List */
  .benefits-list {
    list-style: none;
    margin: 25px 0;
  }

  .benefits-list li {
    padding: 10px 0;
    padding-left: 30px;
    position: relative;
  }

  .benefits-list li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-weight: bold;
    font-size: 1.2rem;
  }

  /* Info Box */
  .info-box {
    background: #eff6ff;
    padding: 25px;
    border-radius: 12px;
    border: 1px solid #bfdbfe;
    margin: 30px 0;
  }

  .info-box h4 {
    color: var(--primary-color);
    margin-bottom: 10px;
    font-size: 1.1rem;
  }

  /* Process Steps */
  .process-steps {
    margin: 40px 0;
  }

  .step {
    display: flex;
    margin-bottom: 30px;
    align-items: flex-start;
  }

  .step-number {
    background: var(--primary-color);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
    margin-right: 20px;
  }

  .step-content h4 {
    color: var(--primary-color);
    margin-bottom: 10px;
    font-size: 1.2rem;
  }

  /* Resources Grid */
  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
    margin: 30px 0;
  }

  .resource-card {
    background: white;
    padding: 25px;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    text-align: center;
  }

  .resource-card h4 {
    color: var(--primary-color);
    margin-bottom: 10px;
    font-size: 1.3rem;
  }

  .resource-link {
    display: inline-block;
    background: var(--primary-color);
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 6px;
    margin-top: 15px;
    transition: background-color 0.3s ease;
  }

  .resource-link:hover {
    background: var(--secondary-color);
  }

  /* Contact Section */
  .contact-section {
    background: var(--light-gray);
    padding: 40px;
    border-radius: 12px;
    text-align: center;
    margin-top: 40px;
  }

  .contact-section h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 1.5rem;
  }

  .cta-button {
    display: inline-block;
    background: var(--accent-color);
    color: var(--text-color);
    padding: 15px 30px;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    margin-top: 20px;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .sidebar {
      position: static;
      order: 2;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .cards-grid {
      grid-template-columns: 1fr;
    }

    .resources-grid {
      grid-template-columns: 1fr;
    }

    .step {
      flex-direction: column;
      text-align: center;
    }

    .step-number {
      margin: 0 auto 15px;
    }
  }
</style>
