---
import Layout from '../../layouts/Layout.astro';

const centros = [
  {
    siglas: "CCIP",
    nombre: "Centro de Capacitación e Investigación del Plástico",
    logo: "/imagenes/logos/logo.png",
    slug: "ccip"
  },
  {
    siglas: "CEGA",
    nombre: "Centro de Gestión Ambiental",
    logo: "/imagenes/logos/logo.png",
    slug: "cega"
  },
  {
    siglas: "CEG",
    nombre: "Centro de Estudios del Género",
    logo: "/imagenes/logos/logo.png",
    slug: "ceg"
  },
  {
    siglas: "CINNES",
    nombre: "Centro de Innovación en Educación Superior",
    logo: "/imagenes/logos/logo.png",
    slug: "cinnes"
  },
];
---

<Layout title="Centros de Estudios - UNEV">
  <main class="main-content">
    <div class="container">
      
      <header class="page-header">
        <h1 class="page-title">Centros de estudios</h1>
      </header>
      
      <div class="centros-grid">
        {centros.map((centro) => (
          <a href={`/centros/${centro.slug}`} class="centro-card">
            <div class="centro-logo">
              {centro.logo ? (
                <img src={centro.logo} alt={`Logo de ${centro.siglas}`} />
              ) : (
                <div class="logo-placeholder"></div>
              )}
            </div>
            <div class="centro-info">
              <span class="centro-siglas">{centro.siglas}</span>
              <p class="centro-nombre">{centro.nombre}</p>
            </div>
          </a>
        ))}
      </div>

    </div>
  </main>
</Layout>

<style>
  /* --- CAMBIO 1: Importamos la tipografía "Lato" de Google Fonts --- */
  @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap');

  /* --- CAMBIO 2: Definimos los nuevos colores y la fuente en variables --- */
  :root {
    --color-rojo-unev: #960201;
    --color-dorado-unev: #bc9201;
    --color-texto-principal: #212529;
    --color-texto-secundario: #5a5a5a;
    --color-borde: #dee2e6;
    --color-fondo: #f8f9fa;
    --font-principal: 'Lato', sans-serif; /* <-- Aplicamos la nueva fuente */
  }

  /* === ESTILOS GLOBALES DE LA PÁGINA === */
  .main-content {
    padding: 4.5rem 0;
    background-color: var(--color-fondo);
    font-family: var(--font-principal); /* <-- Usamos la nueva fuente */
  }
  .container {
    max-width: 1100px;
    margin: 0 auto;
padding: 0 1.5rem;
margin-top:3.1rem;
  }
  
  /* === ENCABEZADO DE LA PÁGINA === */
  .page-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-borde);
  }
  .page-title {
    font-size: 2rem;
    font-weight: 300;
    color: var(--color-texto-principal);
    margin: 0;
  }

  /* === CUADRÍCULA DE TARJETAS === */
  .centros-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; 
    gap: 1.5rem;
  }
  .centro-card {
    background-color: white;
    border: 1px solid var(--color-borde);
    border-radius: 4px;
    padding: 2rem;
    display: flex;
    align-items: center;
    gap: 2rem;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }
  .centro-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    border-color: var(--color-dorado-unev); /* <-- CAMBIO 3: Borde dorado al pasar el ratón */
  }

  /* --- Logo (Izquierda) --- */
  .centro-logo {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
  }
  .centro-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .logo-placeholder {
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    border-radius: 4px;
  }
  
  /* --- Información (Derecha) --- */
  .centro-info {
    display: flex;
    flex-direction: column;
  }
  .centro-siglas {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-rojo-unev); /* <-- CAMBIO 4: Siglas en el nuevo rojo UNEV */
    margin-bottom: 0.25rem;
    transition: color 0.3s ease;
  }
  .centro-card:hover .centro-siglas {
      color: var(--color-dorado-unev); /* <-- El dorado aparece al pasar el ratón */
  }
  .centro-nombre {
    font-size: 0.9rem;
    color: var(--color-texto-secundario);
    line-height: 1.5;
    margin: 0;
  }
  
  /* === RESPONSIVE DESIGN === */
  @media (max-width: 768px) {
    .centros-grid {
      grid-template-columns: 1fr;
    }
  }
  @media (max-width: 480px) {
    .centro-card {
        flex-direction: column;
        text-align: center;
        gap: 1.5rem;
        padding: 1.5rem;
    }
  }
</style>
