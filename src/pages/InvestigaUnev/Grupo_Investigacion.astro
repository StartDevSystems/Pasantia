	/* Global Styles */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
		line-height: 1.6;
		color: #1a1a1a;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		min-height: 100vh;
	}

	.container {
