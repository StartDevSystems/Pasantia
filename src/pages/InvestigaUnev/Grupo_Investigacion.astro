---
// src/pages/grupos-de-investigacion.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Grupos de Investigación - UNEV">
	<main>
		<!-- Hero Section -->
		<section class="hero-section">
			<div class="hero-content">
				<h1>Grupos de Investigación</h1>
				<p class="hero-subtitle">Impulsando el conocimiento y la innovación en UNEV</p>
				<div class="hero-stats">
					<div class="stat">
						<span class="stat-number">15+</span>
						<span class="stat-label">Grupos de Investigación</span>
					</div>
					<div class="stat">
						<span class="stat-number">120+</span>
						<span class="stat-label">Investigadores</span>
					</div>
					<div class="stat">
						<span class="stat-number">200+</span>
						<span class="stat-label">Proyectos Desarrollados</span>
					</div>
				</div>
			</div>
		</section>

		<!-- Navigation Tabs -->
		<section class="tabs-section">
			<div class="container">
				<div class="tabs">
					<button class="tab active" data-tab="todos">Todos los Grupos</button>
					<button class="tab" data-tab="ingenieria">Ingeniería</button>
					<button class="tab" data-tab="ciencias">Ciencias Básicas</button>
					<button class="tab" data-tab="sociales">Ciencias Sociales</button>
