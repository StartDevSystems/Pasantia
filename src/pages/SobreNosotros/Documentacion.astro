    <script>
        // Funci칩n para manejar descargas de PDFs
        function downloadPDF(reglamentoId: string, archivo: string) {
            // En un proyecto real, esto redirigir칤a al PDF correspondiente
            const baseUrl = '/assets/documentos/';
            const pdfUrl = `${baseUrl}${archivo}`;
            
            // Simular descarga o abrir en nueva pesta침a
            window.open(pdfUrl, '_blank');
        }

        // Event listeners para los elementos de reglamentos
        document.addEventListener('DOMContentLoaded', () => {
            const regulationItems = document.querySelectorAll('.regulation-item');
            
            regulationItems.forEach((item) => {
                item.addEventListener('click', () => {
                    const reglamentoId = item.getAttribute('data-regulation');
                    const reglamentoData = {
                        'grupos-investigacion': 'Reglamento_Grupos_Investigacion.pdf',
                        'investigacion': 'Reglamento_Investigacion.pdf',
                        'propiedad-intelectual': 'Reglamento_Propiedad_Intelectual.pdf',
                        'consejo-investigaciones': 'Reglamento_Consejo_Investigaciones.pdf'
                    };
                    
                    if (reglamentoId && reglamentoData[reglamentoId]) {
                        downloadPDF(reglamentoId, reglamentoData[reglamentoId]);
                    }
                });
            });

            // Smooth scrolling para enlaces internos
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href') || '');
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Intersection Observer para animaciones
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        (entry.target as HTMLElement).style.animationPlayState = 'running';
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.article-card').forEach(card => {
                (card as HTMLElement).style.animationPlayState = 'paused';
                observer.observe(card);
            });
        });
    </script>

