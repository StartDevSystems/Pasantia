---
// src/pages/nosotros/investigacion.astro
import Layout from '../../layouts/Layout.astro';
export const prerender = true;

const pageTitle = "La Investigación en UNEV";

const researchFunctions = [
  {
    number: "1",
    description: "Planificar y dirigir acciones estratégicas tendentes a estimular las actividades Investigación en ciencia y tecnología de la UNEV, a fin de fortalecer estas funciones básicas de la Institución.",
  },
  {
    number: "2",
    description: "Establecer y mantener relaciones con organismos nacionales e internacionales a fin de lograr los acuerdos y financiamientos necesarios para la realización de investigaciones.",
  },
  {
    number: "3",
    description: "Planificar, organizar y controlar todos los recursos humanos y financieros asignados a la ejecución de un proyecto investigativo, de modo que se garanticen los resultados previstos, cumpliendo con las normativas nacionales e internacionales en materia de Investigación.",
  },
  {
    number: "4",
    description: "Divulgar, aplicar y dar seguimiento a las estrategias y políticas de investigación de la UNEV.",
  },
  {
    number: "5",
    description: "Fomentar la cultura de la investigación entre los profesores y estudiantes.",
  },
  {
    number: "6",
    description: "Definir, establecer y hacer cumplir las políticas, normas y procedimientos en materia de investigación científica.",
  },
  {
    number: "7",
    description: "Impulsar los proyectos en materia de emprendimiento propiedad intelectual y pre-incubación de empresas.",
  }
];
---

<Layout title={pageTitle}>
    <!-- Main Content -->
    <main>
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-content">
                <h1>La Investigación en <br><span class="highlight">UNEV</span></h1>
            </div>
        </section>

        <!-- Objectives Section -->
        <section class="section-container">
            <div class="container objectives-grid">
                <div class="objectives-text">
                    <h2>Objetivos de Investigación</h2>
                    <p>
                        El objetivo principal de la División de Investigación es la producción de
                        conocimiento que realiza la universidad. Con esto mover las fronteras
                        de los distintos campos, las áreas, las disciplinas y subdisciplinas de
                        las ciencias, las humanidades y la tecnología. Por su vocación de
                        cooperación, integración y complejidad, dichas actividades se definen
                        como de tipo disciplinar, inter-disciplinar, multidisciplinar y
                        transdisciplinar, así como de otros tipos.
                    </p>
                </div>
                <div class="objectives-image">
                    <img src="https://noticiasbrevesjazb.com/wp-content/uploads/2024/05/Screenshot_20240530-210341-e1717770489300.png" alt="Investigadores trabajando en un laboratorio">
                </div>
            </div>
        </section>

        <!-- Functions Section -->
        <section class="section-container bg-light">
            <div class="container">
                <div class="functions-header">
                    <h2>Funciones</h2>
                </div>

                <div class="functions-grid">
                    {researchFunctions.map((func) => (
                        <article class="function-card">
                            <div class="function-number">{func.number}</div>
                            <p class="function-description">{func.description}</p>
                        </article>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* === VARIABLES Y ESTILOS GLOBALES === */
    :root {
        --unev-red: #d90000;
        --text-dark: #333333;
        --text-light: #666666;
        --border-color: #e0e0e0;
        --bg-light: #f8f9fa;
        --bg-white: #ffffff;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        color: var(--text-dark);
        background-color: var(--bg-white);
        margin: 0;
    }
    
    /* MEJORA: El main no debe tener un margen superior si el header es sticky */
    main {
        padding-top: 0; 
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    h2 {
        font-size: 2rem;
        font-weight: 300;
        position: relative;
        padding-bottom: 1rem;
        margin-bottom: 1.5rem;
        margin-top: 0;
    }

    h2::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 50px;
        height: 3px;
        background-color: var(--unev-red);
    }

    p {
        line-height: 1.6;
        color: var(--text-light);
    }

    /* === HERO SECTION === */
    .hero-section {
        height: 500px;
        background-color: #333;
        background-image: url('https://images.unsplash.com/photo-1518152006812-edab29b069ac?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); 
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        position: relative;
    }

    .hero-content {
        background-color: var(--bg-white);
        padding: 2.5rem 3.5rem;
        max-width: 550px;
        position: relative;
        left: 10%;
    }

    .hero-content h1 {
        font-size: 3rem;
        font-weight: 300;
        margin: 0;
        line-height: 1.2;
    }

    .hero-content .highlight {
        color: var(--unev-red);
        font-weight: 700;
    }

    /* === SECCIONES GENERALES === */
    .section-container {
        padding: 4rem 0;
    }
    
    .bg-light {
        background-color: var(--bg-light);
        border-top: 1px solid var(--border-color);
        border-bottom: 1px solid var(--border-color);
    }

    /* === OBJECTIVES SECTION === */
    .objectives-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: center;
    }

    .objectives-image img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 0.5rem;
    }

    /* === FUNCTIONS SECTION === */
    .functions-header {
        text-align: left;
        margin-bottom: 2rem;
    }

    .functions-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .function-card {
        background-color: var(--bg-white);
        border: 1px solid var(--border-color);
        padding: 2rem;
        border-top: 4px solid var(--unev-red);
    }

    .function-number {
        font-size: 3rem;
        font-weight: 700;
        color: var(--unev-red);
        margin-bottom: 1rem;
    }

    /* === RESPONSIVE DESIGN === */
    @media (max-width: 992px) {
        .functions-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .hero-content {
            left: 5%;
        }
    }

    @media (max-width: 768px) {
        .hero-content {
            left: 0;
            margin: 0 1.5rem;
            padding: 2rem;
        }

        .hero-content h1 {
            font-size: 2.5rem;
        }
        
        .objectives-grid {
            grid-template-columns: 1fr;
        }

        .functions-grid {
            grid-template-columns: 1fr;
        }
    }
</style>